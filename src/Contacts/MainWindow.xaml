<Window x:Name="ContactsWindow" x:Class="Contacts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts.ViewModel"
        mc:Ignorable="d"
        Title="Contacts" Height="450" Width="800" MinWidth="600" MinHeight="400">
    <Window.DataContext>
        <local:ModalVM/>
    </Window.DataContext>
    <Grid Margin="5,5,5,5">


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220px"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,5,0">
            <StackPanel Margin="3,3,3,3">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35px"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="Find:"/>
                    <TextBox Grid.Column="1" x:Name="ContactSearchTextbox" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" Height="30px" Margin="5,0,0,0" VerticalContentAlignment="Center"/>
                </Grid>
                <StackPanel Height="60px">
                    
                </StackPanel>
                <UniformGrid Columns="3" Margin="0,0,0,0">
                    <Button x:Name="AddButton" Content="Add" Height="20px" Command="{Binding SaveCommand}" IsEnabled="{Binding IsSaveEnabled}"/>
                    <Button x:Name="EditButton" Content="Edit" Height="20px" Command="{Binding LoadCommand}"/>
                    <Button x:Name="RemoveButton" Content="Remove" Height="20px" Command="{Binding LoadCommand}"/>
                </UniformGrid>
            </StackPanel>
            
        </StackPanel>

        <StackPanel Grid.Column="1">
            <StackPanel Margin="3,3,3,3">
                <StackPanel Height="60px">
                    <Label Content="Name:"/>
                    <Label x:Name="ContactNameLabel" Content="{Binding Name, UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Height="60px">
                    <Label Content="Phone Number:"/>
                    <Label x:Name="ContactPhoneLabel" Content="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Height="60px">
                    <Label Content="Email:"/>
                    <Label x:Name="ContactEmailLabel" Content="{Binding Email, UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
